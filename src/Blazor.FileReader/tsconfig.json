{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "outDir": "wwwroot",
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "es2021"
    ]
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
